                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div class="mobile-bottom-padding"></div>

    <style>
        .quest-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin: 2rem 0;
        }

        .stat-card {
            background: rgba(40, 40, 40, 0.95);
            border-radius: 15px;
            padding: 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .stat-icon {
            font-size: 2rem;
        }

        .stat-value {
            display: block;
            color: #6366f1;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .stat-label {
            color: #a0a0a0;
            font-size: 0.875rem;
        }

        .quest-sections {
            display: grid;
            gap: 2rem;
        }

        .quest-section {
            background: rgba(40, 40, 40, 0.95);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .quest-section h3 {
            color: #ffffff;
            margin-bottom: 1.5rem;
            font-size: 1.25rem;
        }

        .quest-list {
            display: grid;
            gap: 1rem;
        }

        .quest-item {
            background: rgba(30, 30, 30, 0.8);
            border-radius: 15px;
            padding: 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
        }

        .quest-item:hover {
            transform: translateY(-2px);
            border-color: rgba(99, 102, 241, 0.3);
        }

        .quest-item.completed {
            border-color: rgba(16, 185, 129, 0.3);
            background: rgba(16, 185, 129, 0.1);
        }

        .quest-item.special {
            border-color: rgba(251, 191, 36, 0.3);
            background: rgba(251, 191, 36, 0.1);
        }

        .quest-icon {
            font-size: 1.5rem;
            width: 40px;
            text-align: center;
        }

        .quest-content {
            flex: 1;
        }

        .quest-content h4 {
            color: #ffffff;
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .quest-content p {
            color: #a0a0a0;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
        }

        .quest-reward {
            color: #6366f1;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .quest-progress {
            background: rgba(99, 102, 241, 0.2);
            color: #6366f1;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.875rem;
            min-width: 60px;
            text-align: center;
        }

        .quest-item.completed .quest-progress {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
        }

        @media (max-width: 768px) {
            .quest-item {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }

            .quest-content {
                order: 1;
            }

            .quest-icon {
                order: 0;
            }

            .quest-progress {
                order: 2;
            }
        }
    </style>
</body>
</html>