    <!-- Edit Profile Modal -->
    <div class="modal-overlay" id="editProfileModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Edit Profile</h3>
                <button class="close-btn" onclick="closeEditProfileModal()">&times;</button>
            </div>
            
            <form id="editProfileForm" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="form-label" for="editUsername">Username (Optional)</label>
                    <input type="text" id="editUsername" name="username" class="form-input" 
                           value="<%= user ? user.username : '' %>" placeholder="Enter new username or leave blank to keep current">
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="editProfilePhoto">Profile Photo</label>
                    <div class="file-input-wrapper">
                        <input type="file" id="editProfilePhoto" name="profilePhoto" 
                               class="file-input" accept="image/*" onchange="previewImage(this)">
                        <label for="editProfilePhoto" class="file-input-label">
                            üì∑ Choose Photo
                        </label>
                    </div>
                    <div class="file-preview" id="filePreview"></div>
                    <img id="imagePreview" class="preview-image" style="display: none;">
                </div>
                
                <div class="modal-actions">
                    <button type="button" class="btn btn-cancel" onclick="closeEditProfileModal()">Cancel</button>
                    <button type="submit" class="btn btn-save">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openEditProfileModal() {
            console.log('Opening edit profile modal...');
            const modal = document.getElementById('editProfileModal');
            if (modal) {
                modal.classList.add('show');
                console.log('Modal opened');
            } else {
                console.error('Modal not found');
            }
        }

        function closeEditProfileModal() {
            const modal = document.getElementById('editProfileModal');
            modal.classList.remove('show');
            
            // Reset form
            document.getElementById('editProfileForm').reset();
            document.getElementById('filePreview').innerHTML = '';
            document.getElementById('imagePreview').style.display = 'none';
            
            // Reset username field to current value
            const currentUsername = '<%= user ? user.username : "" %>';
            document.getElementById('editUsername').value = currentUsername;
        }

        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const filePreview = document.getElementById('filePreview');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    filePreview.innerHTML = 'Selected: ' + input.files[0].name;
                };
                
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.style.display = 'none';
                filePreview.innerHTML = '';
            }
        }

        // Handle form submission
        document.getElementById('editProfileForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData();
            const username = document.getElementById('editUsername').value;
            const photoFile = document.getElementById('editProfilePhoto').files[0];
            
            formData.append('username', username);
            if (photoFile) {
                formData.append('profilePhoto', photoFile);
            }
            
            const saveBtn = document.querySelector('.btn-save');
            saveBtn.disabled = true;
            saveBtn.textContent = 'Saving...';
            
            try {
                const response = await fetch('/api/profile/update', {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Show success message
                    alert('Profile updated successfully!');
                    
                    // Reload page to show updated profile
                    window.location.reload();
                } else {
                    alert('Error updating profile: ' + result.message);
                }
            } catch (error) {
                console.error('Error updating profile:', error);
                alert('Error updating profile. Please try again.');
            } finally {
                saveBtn.disabled = false;
                saveBtn.textContent = 'Save Changes';
            }
        });

        // Close modal when clicking outside
        document.getElementById('editProfileModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeEditProfileModal();
            }
        });

        // Border management functionality
        let availableBorders = [];
        let userOwnedBorders = [];
        let equippedBorder = null;

        // Load borders on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadAvailableBorders();
        });

        async function loadAvailableBorders() {
            try {
                console.log('üîÑ Loading available borders...');
                const response = await fetch('/api/borders/available');
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
                const data = await response.json();
                console.log('üìä Borders API response:', data);
                
                if (data.success) {
                    availableBorders = data.borders || [];
                    userOwnedBorders = data.userBorders || [];
                    equippedBorder = data.equippedBorder || null;
                    
                    console.log('‚úÖ Borders loaded:', {
                        available: availableBorders.length,
                        owned: userOwnedBorders.length,
                        equipped: equippedBorder
                    });
                    
                    renderBordersGrid();
                } else {
                    console.error('‚ùå Failed to load borders:', data.message);
                    document.getElementById('bordersGrid').innerHTML = 
                        `<div class="loading-message">Failed to load borders: ${data.message}</div>`;
                }
            } catch (error) {
                console.error('‚ùå Error loading borders:', error);
                document.getElementById('bordersGrid').innerHTML = 
                    `<div class="loading-message">Error loading borders: ${error.message}</div>`;
            }
        }

        function renderBordersGrid() {
            const grid = document.getElementById('bordersGrid');
            
            if (!availableBorders || availableBorders.length === 0) {
                grid.innerHTML = '<div class="loading-message">No borders available</div>';
                return;
            }

            console.log('üé® Rendering borders grid:', {
                totalBorders: availableBorders.length,
                ownedBorders: userOwnedBorders.length,
                equipped: equippedBorder,
                userOwnedBorders: userOwnedBorders
            });

            grid.innerHTML = availableBorders.map(border => {
                // Check if user owns this border - default border is always owned
                const isOwned = border.borderId === 'default' || userOwnedBorders.some(ub => ub.borderId === border.borderId);
                const isEquipped = equippedBorder === border.borderId;
                
                let statusClass = isEquipped ? 'equipped' : (isOwned ? 'owned' : 'locked');
                let statusText = isEquipped ? 'Equipped' : (isOwned ? 'Owned' : 'Locked');
                
                console.log(`üîç Border ${border.borderId}:`, {
                    owned: isOwned,
                    equipped: isEquipped,
                    userOwnedBorders: userOwnedBorders.map(ub => ub.borderId)
                });
                
                return `
                    <div class="border-card ${statusClass}" data-border-id="${border.borderId}">
                        <div class="border-card-header">
                            <span class="border-rarity ${border.rarity}">${border.rarity.toUpperCase()}</span>
                            <span class="border-status ${statusClass}">${statusText}</span>
                        </div>
                        
                        <div class="border-card-preview">
                            <div class="preview-avatar-wrapper">
                                <div class="preview-avatar">
                                    <% if (user && user.profilePhoto) { %>
                                        <img src="<%= user.profilePhoto %>" alt="Profile">
                                    <% } else { %>
                                        <svg width="30" height="30" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" fill="white"/>
                                            <path d="M12 14C7.58172 14 4 17.5817 4 22H20C20 17.5817 16.4183 14 12 14Z" fill="white"/>
                                        </svg>
                                    <% } %>
                                </div>
                                ${isOwned || border.borderId === 'default' ? `<div class="preview-border-overlay">
                                    <img src="${border.imageUrl}" alt="${border.name}" onerror="this.style.display='none'">
                                </div>` : ''}
                            </div>
                        </div>
                        
                        <div class="border-card-content">
                            <h5>${border.name || 'Unknown Border'}</h5>
                            <p>${border.description || 'No description available'}</p>
                        </div>
                        
                        <div class="border-card-actions">
                            ${isOwned || border.borderId === 'default' ? (isEquipped ? 
                                '<button class="btn-equip" disabled>Currently Equipped</button>' :
                                `<button class="btn-equip" onclick="equipBorder('${border.borderId}')">Equip Border</button>`
                            ) : '<button class="btn-equip" disabled>Not Available</button>'}
                        </div>
                    </div>
                `;
            }).join('');
        }

        async function equipBorder(borderId) {
            try {
                console.log('üéØ Equipping border:', borderId);
                
                const response = await fetch('/api/borders/equip', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ borderId })
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
                const data = await response.json();
                console.log('üìä Equip border response:', data);
                
                if (data.success) {
                    console.log('‚úÖ Border equipped successfully');
                    // Update local state
                    equippedBorder = borderId;
                    // Re-render the grid to show updated state
                    renderBordersGrid();
                    // Also reload the page to update the currently equipped section
                    setTimeout(() => {
                        window.location.reload();
                    }, 500);
                } else {
                    console.error('‚ùå Failed to equip border:', data.message);
                    alert('Failed to equip border: ' + data.message);
                }
            } catch (error) {
                console.error('‚ùå Error equipping border:', error);
                alert('Error equipping border: ' + error.message);
            }
        }

        async function removeBorder() {
            if (!confirm('Are you sure you want to remove your current border?')) {
                return;
            }

            try {
                const response = await fetch('/api/borders/remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Reload the page to show the removed border
                    window.location.reload();
                } else {
                    alert('Failed to remove border: ' + data.message);
                }
            } catch (error) {
                console.error('Error removing border:', error);
                alert('Error removing border');
            }
        }
    </script>
