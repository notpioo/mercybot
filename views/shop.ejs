
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop - NoMercy</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/navigation.css">
    <link rel="stylesheet" href="/dashboard.css">
</head>
<body>
    <!-- Include Navigation -->
    <%- include('partials/navigation', { currentPage: 'list', user: user }) %>

    <main class="main-content">
        <div class="shop-container">
            <!-- Left Sidebar -->
            <aside class="shop-sidebar">
                <!-- Shop Header -->
                <div class="shop-header">
                    <div class="shop-logo">
                        <span class="shop-icon">üõí</span>
                        <h1 class="shop-title">NoMercy Shop</h1>
                    </div>
                    <p class="shop-subtitle">Beli item premium dan upgrade dengan balance atau chips Anda</p>
                </div>

                <!-- Balance Display -->
                <div class="balance-section">
                    <div class="balance-header">
                        <h3>üí∞ Saldo Anda</h3>
                    </div>
                    <div class="balance-cards">
                        <div class="balance-card balance-money">
                            <div class="balance-icon">üí∞</div>
                            <div class="balance-info">
                                <span class="balance-label">Balance</span>
                                <span class="balance-amount"><%= user ? user.balance.toLocaleString() : '60' %></span>
                            </div>
                        </div>
                        <div class="balance-card balance-chips">
                            <div class="balance-icon">üíé</div>
                            <div class="balance-info">
                                <span class="balance-label">Chips</span>
                                <span class="balance-amount"><%= user ? user.chips.toLocaleString() : '80' %></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Category Filter -->
                <div class="category-section">
                    <h3 class="category-title">Kategori Item</h3>
                    <div class="category-grid">
                        <button class="category-btn active" data-category="all">
                            <span class="category-icon">üî•</span>
                            <span class="category-text">Semua</span>
                        </button>
                        <button class="category-btn" data-category="border">
                            <span class="category-icon">üñºÔ∏è</span>
                            <span class="category-text">Border</span>
                        </button>
                        <button class="category-btn" data-category="premium">
                            <span class="category-icon">üëë</span>
                            <span class="category-text">Premium</span>
                        </button>
                        <button class="category-btn" data-category="booster">
                            <span class="category-icon">üöÄ</span>
                            <span class="category-text">Booster</span>
                        </button>
                        <button class="category-btn" data-category="cosmetic">
                            <span class="category-icon">‚ú®</span>
                            <span class="category-text">Cosmetic</span>
                        </button>
                    </div>
                </div>
            </aside>

            <!-- Main Content Area -->
            <main class="shop-main">
                <!-- Flash Sale Section -->
                <section class="flash-sale-section" id="flashSaleSection" style="display: none;">
                    <div class="section-header">
                        <h2>‚ö° Flash Sale</h2>
                        <p>Penawaran terbatas waktu!</p>
                    </div>
                    <div class="items-grid" id="flashSaleItems">
                        <!-- Flash sale items will be loaded here -->
                    </div>
                </section>

                <!-- Limited Items Section -->
                <section class="limited-section" id="limitedSection" style="display: none;">
                    <div class="section-header">
                        <h2>üî• Limited Edition</h2>
                        <p>Item terbatas yang sangat eksklusif</p>
                    </div>
                    <div class="items-grid" id="limitedItems">
                        <!-- Limited items will be loaded here -->
                    </div>
                </section>

                <!-- Event Items Section -->
                <section class="event-section" id="eventSection" style="display: none;">
                    <div class="section-header">
                        <h2>üéâ Event Special</h2>
                        <p>Item khusus untuk event terbaru</p>
                    </div>
                    <div class="items-grid" id="eventItems">
                        <!-- Event items will be loaded here -->
                    </div>
                </section>

                <!-- All Items Section -->
                <section class="all-items-section">
                    <div class="section-header">
                        <h2>üõçÔ∏è Semua Item</h2>
                        <p>Jelajahi koleksi lengkap item kami</p>
                    </div>
                    <div class="items-grid" id="allItems">
                        <!-- All items will be loaded here -->
                    </div>
                </section>

                <!-- Loading State -->
                <div class="loading-state" id="loadingState">
                    <div class="loading-spinner"></div>
                    <p>Memuat item shop...</p>
                </div>

                <!-- Empty State -->
                <div class="empty-state" id="emptyState" style="display: none;">
                    <div class="empty-icon">üõí</div>
                    <h3>Tidak Ada Item</h3>
                    <p>Belum ada item yang tersedia di kategori ini</p>
                </div>
            </main>
        </div>
    </main>

    <!-- Mobile bottom padding -->
    <div class="mobile-bottom-padding"></div>

    <style>
        /* Main Container */
        .shop-container {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 2rem;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
            min-height: calc(100vh - 70px);
        }

        /* Shop Sidebar */
        .shop-sidebar {
            background: rgba(30, 30, 30, 0.95);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            height: fit-content;
            position: sticky;
            top: 90px;
        }

        /* Shop Header */
        .shop-header {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .shop-logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .shop-icon {
            font-size: 3rem;
            background: linear-gradient(45deg, #6366f1, #8b5cf6);
            border-radius: 16px;
            padding: 1rem;
            display: inline-block;
        }

        .shop-title {
            font-size: 1.75rem;
            font-weight: 800;
            background: linear-gradient(45deg, #6366f1, #8b5cf6, #ec4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
        }

        .shop-subtitle {
            color: #a0a0a0;
            font-size: 0.95rem;
            line-height: 1.5;
            margin: 0;
        }

        /* Balance Section */
        .balance-section {
            margin-bottom: 2rem;
        }

        .balance-header {
            margin-bottom: 1rem;
        }

        .balance-header h3 {
            color: #ffffff;
            font-size: 1.125rem;
            font-weight: 600;
            margin: 0;
        }

        .balance-cards {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .balance-card {
            display: flex;
            align-items: center;
            gap: 1rem;
            background: rgba(40, 40, 40, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1rem;
            transition: all 0.3s ease;
        }

        .balance-card:hover {
            transform: translateY(-2px);
            border-color: rgba(99, 102, 241, 0.3);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .balance-money {
            border-left: 3px solid #fbbf24;
        }

        .balance-chips {
            border-left: 3px solid #6366f1;
        }

        .balance-icon {
            font-size: 1.5rem;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
        }

        .balance-info {
            display: flex;
            flex-direction: column;
        }

        .balance-label {
            color: #a0a0a0;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .balance-amount {
            color: #ffffff;
            font-size: 1.25rem;
            font-weight: 700;
        }

        /* Category Section */
        .category-section {
            margin-bottom: 1rem;
        }

        .category-title {
            color: #ffffff;
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
        }

        .category-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            padding: 1rem 0.75rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            background: rgba(40, 40, 40, 0.6);
            color: #a0a0a0;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
        }

        .category-btn:hover {
            background: rgba(99, 102, 241, 0.1);
            border-color: rgba(99, 102, 241, 0.3);
            color: #ffffff;
            transform: translateY(-2px);
        }

        .category-btn.active {
            background: linear-gradient(45deg, #6366f1, #8b5cf6);
            border-color: transparent;
            color: #ffffff;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
        }

        .category-icon {
            font-size: 1.25rem;
        }

        .category-text {
            font-weight: 600;
            font-size: 0.8rem;
        }

        /* Main Content */
        .shop-main {
            background: rgba(30, 30, 30, 0.95);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        /* Section Headers */
        .section-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .section-header h2 {
            color: #ffffff;
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .section-header p {
            color: #a0a0a0;
            margin: 0;
            font-size: 0.95rem;
        }

        /* Special Sections */
        .flash-sale-section,
        .limited-section,
        .event-section {
            margin-bottom: 3rem;
            position: relative;
            overflow: hidden;
        }

        .flash-sale-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #f59e0b, #ef4444);
            animation: pulse 2s infinite;
        }

        .limited-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #ef4444, #dc2626);
        }

        .event-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #8b5cf6, #ec4899);
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        /* Items Grid */
        .items-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        /* Item Cards */
        .shop-item {
            background: rgba(40, 40, 40, 0.95);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 1.75rem;
            text-align: center;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

        .shop-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #6366f1, #8b5cf6, #ec4899);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .shop-item:hover {
            transform: translateY(-6px);
            border-color: rgba(99, 102, 241, 0.3);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        }

        .shop-item:hover::before {
            opacity: 1;
        }

        .shop-item.flash-sale {
            border-color: rgba(245, 158, 11, 0.4);
            background: linear-gradient(135deg, rgba(40, 40, 40, 0.95), rgba(80, 60, 20, 0.95));
        }

        .shop-item.flash-sale::before {
            background: linear-gradient(90deg, #f59e0b, #ef4444);
            opacity: 1;
        }

        .shop-item.limited {
            border-color: rgba(239, 68, 68, 0.4);
            background: linear-gradient(135deg, rgba(40, 40, 40, 0.95), rgba(80, 20, 20, 0.95));
        }

        .shop-item.limited::before {
            background: linear-gradient(90deg, #ef4444, #dc2626);
            opacity: 1;
        }

        .shop-item.event {
            border-color: rgba(139, 92, 246, 0.4);
            background: linear-gradient(135deg, rgba(40, 40, 40, 0.95), rgba(60, 40, 80, 0.95));
        }

        .shop-item.event::before {
            background: linear-gradient(90deg, #8b5cf6, #ec4899);
            opacity: 1;
        }

        .item-image {
            width: 70px;
            height: 70px;
            margin: 0 auto 1.25rem;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px;
        }

        .item-name {
            color: #ffffff;
            font-size: 1.125rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            line-height: 1.3;
        }

        .item-description {
            color: #a0a0a0;
            margin-bottom: 1.25rem;
            line-height: 1.4;
            font-size: 0.9rem;
        }

        .item-price {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .price-amount {
            color: #6366f1;
            font-size: 1.5rem;
            font-weight: 800;
        }

        .price-currency {
            font-size: 1.25rem;
        }

        .item-stock {
            color: #a0a0a0;
            font-size: 0.8rem;
            margin-bottom: 1.25rem;
        }

        .item-stock.low-stock {
            color: #f59e0b;
        }

        .item-stock.out-of-stock {
            color: #ef4444;
        }

        .purchase-btn {
            width: 100%;
            padding: 0.875rem 1.25rem;
            border: none;
            border-radius: 10px;
            font-weight: 700;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            background: linear-gradient(45deg, #6366f1, #8b5cf6);
            color: white;
        }

        .purchase-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
        }

        .purchase-btn:disabled {
            background: rgba(255, 255, 255, 0.1);
            color: #666;
            cursor: not-allowed;
        }

        /* Item Label Badges */
        .item-badge {
            position: absolute;
            top: 0.75rem;
            left: 0.75rem;
            padding: 0.25rem 0.75rem;
            border-radius: 12px;
            font-size: 0.7rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            z-index: 5;
            animation: labelGlow 2s infinite;
        }

        .flash-sale-badge {
            background: linear-gradient(45deg, #f59e0b, #ef4444);
            color: white;
            box-shadow: 0 2px 8px rgba(245, 158, 11, 0.4);
        }

        .limited-badge {
            background: linear-gradient(45deg, #ef4444, #dc2626);
            color: white;
            box-shadow: 0 2px 8px rgba(239, 68, 68, 0.4);
        }

        .event-badge {
            background: linear-gradient(45deg, #8b5cf6, #ec4899);
            color: white;
            box-shadow: 0 2px 8px rgba(139, 92, 246, 0.4);
        }

        @keyframes labelGlow {
            0%, 100% { 
                box-shadow: 0 2px 8px rgba(245, 158, 11, 0.4);
                transform: scale(1);
            }
            50% { 
                box-shadow: 0 4px 16px rgba(245, 158, 11, 0.6);
                transform: scale(1.05);
            }
        }

        /* Loading and Empty States */
        .loading-state {
            text-align: center;
            padding: 3rem 2rem;
        }

        .loading-spinner {
            width: 40px;
            height: 40px;
            border: 3px solid rgba(99, 102, 241, 0.1);
            border-left: 3px solid #6366f1;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            color: #a0a0a0;
        }

        .empty-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .shop-container {
                grid-template-columns: 280px 1fr;
                gap: 1.5rem;
            }

            .shop-sidebar {
                padding: 1.75rem;
            }
        }

        /* Tablet Landscape */
        @media (max-width: 1024px) {
            .shop-container {
                grid-template-columns: 1fr;
                gap: 1.5rem;
                padding: 1.5rem;
                max-width: none;
            }

            .shop-sidebar {
                position: static;
                order: 1;
                padding: 1.5rem;
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 1.5rem;
                align-items: start;
            }

            .shop-header {
                grid-column: 1 / -1;
                text-align: left;
                margin-bottom: 1rem;
                padding-bottom: 1rem;
            }

            .shop-logo {
                flex-direction: row;
                justify-content: flex-start;
                text-align: left;
                gap: 1rem;
            }

            .shop-icon {
                font-size: 2rem;
                padding: 0.75rem;
            }

            .shop-title {
                font-size: 1.5rem;
                margin: 0;
            }

            .balance-section {
                margin-bottom: 0;
            }

            .balance-cards {
                flex-direction: row;
                gap: 1rem;
            }

            .balance-card {
                flex: 1;
                padding: 1rem 0.75rem;
            }

            .category-section {
                margin-bottom: 0;
            }

            .category-grid {
                grid-template-columns: repeat(5, 1fr);
                gap: 0.75rem;
            }

            .category-btn {
                padding: 0.75rem 0.5rem;
                font-size: 0.85rem;
            }

            .category-text {
                font-size: 0.75rem;
            }

            .shop-main {
                order: 2;
                padding: 1.5rem;
            }

            .featured-items {
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 1.25rem;
            }

            .items-grid {
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 1.25rem;
            }
        }

        /* Tablet Portrait */
        @media (max-width: 768px) {
            .shop-container {
                padding: 1rem;
                gap: 1rem;
            }

            .shop-sidebar {
                grid-template-columns: 1fr;
                gap: 1.25rem;
                padding: 1.25rem;
            }

            .shop-header {
                text-align: center;
                grid-column: 1;
            }

            .shop-logo {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .balance-cards {
                flex-direction: row;
                gap: 0.75rem;
            }

            .balance-card {
                padding: 0.875rem 0.75rem;
            }

            .balance-icon {
                font-size: 1.25rem;
            }

            .balance-amount {
                font-size: 1.125rem;
            }

            .category-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 0.75rem;
            }

            .category-btn {
                padding: 0.875rem 0.5rem;
            }

            .shop-main {
                padding: 1.25rem;
            }

            .featured-items,
            .items-grid {
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 1rem;
            }

            .section-header h2 {
                font-size: 1.5rem;
            }

            .shop-item {
                padding: 1.5rem;
            }

            .item-image {
                width: 60px;
                height: 60px;
                margin-bottom: 1rem;
            }

            .item-name {
                font-size: 1rem;
            }

            .price-amount {
                font-size: 1.25rem;
            }
        }

        /* Mobile Large */
        @media (max-width: 640px) {
            .shop-container {
                padding: 0.875rem;
                gap: 0.875rem;
            }

            .shop-sidebar {
                padding: 1rem;
                gap: 1rem;
            }

            .shop-header {
                margin-bottom: 0.75rem;
                padding-bottom: 0.75rem;
            }

            .shop-title {
                font-size: 1.375rem;
            }

            .shop-subtitle {
                font-size: 0.875rem;
            }

            .balance-cards {
                gap: 0.5rem;
            }

            .balance-card {
                padding: 0.75rem 0.5rem;
                border-radius: 10px;
            }

            .balance-label {
                font-size: 0.75rem;
            }

            .balance-amount {
                font-size: 1rem;
            }

            .category-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 0.5rem;
            }

            .category-btn {
                padding: 0.75rem 0.375rem;
                border-radius: 10px;
            }

            .category-icon {
                font-size: 1.125rem;
            }

            .category-text {
                font-size: 0.7rem;
            }

            .shop-main {
                padding: 1rem;
            }

            .featured-items,
            .items-grid {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 0.875rem;
            }

            .section-header {
                margin-bottom: 1.5rem;
            }

            .section-header h2 {
                font-size: 1.375rem;
            }

            .shop-item {
                padding: 1.25rem;
                border-radius: 14px;
            }

            .item-image {
                width: 55px;
                height: 55px;
                font-size: 1.75rem;
            }

            .item-name {
                font-size: 0.95rem;
                margin-bottom: 0.5rem;
            }

            .item-description {
                font-size: 0.825rem;
                margin-bottom: 1rem;
            }

            .price-amount {
                font-size: 1.125rem;
            }

            .purchase-btn {
                padding: 0.75rem 1rem;
                font-size: 0.85rem;
            }
        }

        /* Mobile Small */
        @media (max-width: 480px) {
            .shop-container {
                padding: 0.75rem;
                padding-bottom: 120px;
                gap: 0.75rem;
            }

            .shop-sidebar {
                padding: 0.875rem;
                gap: 0.875rem;
            }

            .shop-icon {
                font-size: 1.75rem;
                padding: 0.625rem;
                border-radius: 12px;
            }

            .shop-title {
