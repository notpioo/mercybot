            }

            .shop-title {
                font-size: 1.125rem;
            }

            .balance-card {
                padding: 0.625rem;
            }

            .balance-amount {
                font-size: 0.9rem;
            }

            .shop-main {
                padding: 0.75rem;
            }

            .shop-item {
                padding: 1rem;
            }

            .section-header h2 {
                font-size: 1.125rem;
            }

            .item-name {
                font-size: 0.85rem;
            }

            .item-description {
                font-size: 0.75rem;
            }

            .price-amount {
                font-size: 0.95rem;
            }
        }
    </style>

    <script>
        let allItems = [];
        let flashSaleItems = [];
        let limitedItems = [];
        let eventItems = [];
        let currentCategory = 'all';

        // Load items when page loads
        document.addEventListener('DOMContentLoaded', async () => {
            showLoading(true);
            await loadShopItems();
            showLoading(false);
        });

        // Show/hide loading state
        function showLoading(show) {
            const loadingState = document.getElementById('loadingState');
            const flashSaleSection = document.getElementById('flashSaleSection');
            const limitedSection = document.getElementById('limitedSection');
            const eventSection = document.getElementById('eventSection');
            const allItemsSection = document.querySelector('.all-items-section');
            
            if (show) {
                loadingState.style.display = 'block';
                flashSaleSection.style.display = 'none';
                limitedSection.style.display = 'none';
                eventSection.style.display = 'none';
                allItemsSection.style.display = 'none';
            } else {
                loadingState.style.display = 'none';
                allItemsSection.style.display = 'block';
            }
        }

        // Load shop items from database
        async function loadShopItems() {
            try {
                const response = await fetch('/api/shop/items');
                const data = await response.json();
                if (data.success) {
                    allItems = data.items;
                    flashSaleItems = allItems.filter(item => item.itemLabel === 'flash-sale');
                    limitedItems = allItems.filter(item => item.itemLabel === 'limited');
                    eventItems = allItems.filter(item => item.itemLabel === 'event');
                    renderItems();
                }
            } catch (error) {
                console.error('Error loading shop items:', error);
                showEmptyState();
            }
        }

        // Render all items
        function renderItems() {
            renderSpecialItems();
            renderAllItems();
        }

        // Render special items sections
        function renderSpecialItems() {
            // Flash Sale Items
            const flashSaleContainer = document.getElementById('flashSaleItems');
            const flashSaleSection = document.getElementById('flashSaleSection');
            
            if (flashSaleItems.length > 0) {
                flashSaleSection.style.display = 'block';
                flashSaleContainer.innerHTML = flashSaleItems.map(item => createItemHTML(item, 'flash-sale')).join('');
            } else {
                flashSaleSection.style.display = 'none';
            }

            // Limited Items
            const limitedContainer = document.getElementById('limitedItems');
            const limitedSection = document.getElementById('limitedSection');
            
            if (limitedItems.length > 0) {
                limitedSection.style.display = 'block';
                limitedContainer.innerHTML = limitedItems.map(item => createItemHTML(item, 'limited')).join('');
            } else {
                limitedSection.style.display = 'none';
            }

            // Event Items
            const eventContainer = document.getElementById('eventItems');
            const eventSection = document.getElementById('eventSection');
            
            if (eventItems.length > 0) {
                eventSection.style.display = 'block';
                eventContainer.innerHTML = eventItems.map(item => createItemHTML(item, 'event')).join('');
            } else {
                eventSection.style.display = 'none';
            }
        }

        // Render all items based on category filter
        function renderAllItems() {
            const container = document.getElementById('allItems');
            const emptyState = document.getElementById('emptyState');
            
            let filteredItems = currentCategory === 'all' 
                ? allItems 
                : allItems.filter(item => item.category === currentCategory);

            if (filteredItems.length === 0) {
                container.innerHTML = '';
                emptyState.style.display = 'block';
                return;
            }

            emptyState.style.display = 'none';
            container.innerHTML = filteredItems.map(item => createItemHTML(item, false)).join('');
        }

        // Create item HTML
        function createItemHTML(item, labelClass = '') {
            const currencyIcon = item.priceType === 'balance' ? 'üí∞' : 'üíé';
            const stockClass = item.stock <= 0 ? 'out-of-stock' : item.stock <= 5 ? 'low-stock' : '';
            const stockText = item.stock <= 0 ? 'Habis' : `Stock: ${item.stock}`;
            
            // Determine item class based on label
            let itemClass = '';
            if (labelClass) {
                itemClass = labelClass;
            } else if (item.itemLabel && item.itemLabel !== 'normal') {
                itemClass = item.itemLabel;
            }
            
            // Get label badge
            const labelBadge = getLabelBadge(item.itemLabel);
            
            return `
                <div class="shop-item ${itemClass}" data-category="${item.category}" data-item-id="${item._id}">
                    ${labelBadge}
                    <div class="item-image">
                        ${item.imageUrl ? 
                            `<img src="${item.imageUrl}" alt="${item.name}">` : 
                            getDefaultIcon(item.category)
                        }
                    </div>
                    <h3 class="item-name">${item.name}</h3>
                    <p class="item-description">${item.description || 'Tidak ada deskripsi'}</p>
                    <div class="item-price">
                        <span class="price-amount">${item.price.toLocaleString()}</span>
                        <span class="price-currency">${currencyIcon}</span>
                    </div>
                    <div class="item-stock ${stockClass}">${stockText}</div>
                    <button class="purchase-btn" onclick="purchaseItem('${item._id}')" ${item.stock <= 0 ? 'disabled' : ''}>
                        ${item.stock <= 0 ? '‚ùå Habis' : 'üõí Beli Sekarang'}
                    </button>
                </div>
            `;
        }

        // Get label badge
        function getLabelBadge(label) {
            if (!label || label === 'normal') return '';
            
            const badges = {
                'flash-sale': '<div class="item-badge flash-sale-badge">‚ö° FLASH SALE</div>',
                'limited': '<div class="item-badge limited-badge">üî• LIMITED</div>',
                'event': '<div class="item-badge event-badge">üéâ EVENT</div>'
            };
            
            return badges[label] || '';
        }

        // Get default icon for category
        function getDefaultIcon(category) {
            const icons = {
                border: 'üñºÔ∏è',
                premium: 'üëë',
                booster: 'üöÄ',
                cosmetic: '‚ú®'
            };
            return icons[category] || 'üõí';
        }

        // Show empty state
        function showEmptyState() {
            document.getElementById('featuredItems').innerHTML = '';
            document.getElementById('allItems').innerHTML = '';
            document.getElementById('emptyState').style.display = 'block';
        }

        // Purchase item function
        async function purchaseItem(itemId) {
            try {
                const response = await fetch('/api/shop/purchase', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ itemId })
                });

                const data = await response.json();
                if (data.success) {
                    showPurchaseSuccess();
                    setTimeout(() => location.reload(), 2000);
                } else {
                    alert('‚ùå ' + data.message);
                }
            } catch (error) {
                console.error('Error purchasing item:', error);
                alert('‚ùå Terjadi kesalahan saat membeli item');
            }
        }

        // Show purchase success animation
        function showPurchaseSuccess() {
            const overlay = document.createElement('div');
            overlay.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.8);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 10000;
                backdrop-filter: blur(4px);
            `;

            const successCard = document.createElement('div');
            successCard.style.cssText = `
                background: rgba(40, 40, 40, 0.95);
                border: 1px solid rgba(34, 197, 94, 0.3);
                border-radius: 20px;
                padding: 3rem 2rem;
                text-align: center;
                color: white;
                max-width: 400px;
                animation: successPop 0.5s ease-out;
            `;

            successCard.innerHTML = `
                <div style="font-size: 4rem; margin-bottom: 1rem;">‚úÖ</div>
                <h3 style="color: #22c55e; margin-bottom: 0.5rem;">Pembelian Berhasil!</h3>
                <p style="color: #a0a0a0; margin: 0;">Item telah ditambahkan ke inventori Anda</p>
            `;

            if (!document.querySelector('#successAnimation')) {
                const style = document.createElement('style');
                style.id = 'successAnimation';
                style.textContent = `
                    @keyframes successPop {
                        0% { transform: scale(0.8); opacity: 0; }
                        100% { transform: scale(1); opacity: 1; }
                    }
                `;
                document.head.appendChild(style);
            }

            overlay.appendChild(successCard);
            document.body.appendChild(overlay);

            setTimeout(() => {
                document.body.removeChild(overlay);
            }, 2000);
        }

        // Category filtering
        document.querySelectorAll('.category-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.category-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                currentCategory = btn.dataset.category;
                renderAllItems();
            });
        });
    </script>
